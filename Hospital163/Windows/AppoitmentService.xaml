<Window x:Class="Hospital163.Windows.AppoitmentService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital163.Windows"
        mc:Ignorable="d"
        Title="AppoitmentService" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Записаться на услугу" 
                       HorizontalAlignment="Center"
                       
                       FontSize="20"
                       />
            <DatePicker 
                x:Name="data"
                HorizontalAlignment="Center"
                Margin="0 20 0 0 "
                />



            <ComboBox x:Name="cbEmp"  
                      Margin="0 50 0 0"/>
            <ComboBox x:Name="cbClient"
                      Margin="0 20 0 0"/>


        </StackPanel>
        
        
        
    </Grid>
</Window>
